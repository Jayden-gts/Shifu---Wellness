@model Shifu.Models.MentorDashboardViewModel
@{
    Layout = "_Layout";
    ViewBag.Title = "Mentor Dashboard";
}

<div class="container-fluid vh-100 p-0">
    <div class="row column-gap-1 flex-nowrap vh-100 box">

        <!-- LEFT SIDEBAR -->
        <div class="col-3 box rounded d-flex flex-column align-items-center overflow-y-auto border p-2"
             style="background-image: url('@Url.Content("~/bgGreen.png")'); background-size: cover; background-position: left; max-height: 100vh">

            <!-- Welcome Section -->
            <div class="p-3 mb-3 rounded shadow bg-white text-center w-100">
                <h5>Welcome Mentor!</h5>
            </div>

            <!-- Chat -->
            <div class="p-3 mb-3 rounded shadow bg-white text-center w-100">
                <h5>Get Connected!</h5>
                <a asp-controller="Mentor" asp-action="Chat" class="btn btn-outline-success w-100">
                    Open Chat
                </a>
            </div>

            <!-- Spacer to push logout to bottom -->
            <div class="mt-auto p-3 w-100">
                <a asp-action="SignOut" class="btn btn-outline-danger w-100">Sign Out</a>
            </div>

        </div>

        <!-- RIGHT CONTENT PANEL (keeps layout balanced) -->
        <div class="col-9 box rounded border bg-body-secondary h-100 overflow-auto p-4"
             style="background-image: url('@Url.Content("~/bgGreen.png")'); background-size: cover; background-position: left;">

            <div class="bg-white p-4 rounded shadow">
                <h3>Mentor Dashboard</h3>
                <p class="text-muted">Use the left menu to navigate.</p>
            </div>

        </div>

    </div>
</div>