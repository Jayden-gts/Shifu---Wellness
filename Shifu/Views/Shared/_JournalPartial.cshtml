@model UserData
@inject Shifu.Services.JournalManager JournalManager

<div class="journal-container w-100">
    <h4>Your Journal</h4>

    <form id="journalForm" method="post">
        <textarea class="form-control mb-2" name="content" placeholder="Write your thoughts here..." rows="4"></textarea>

        <div class="input-group mb-2">
            <select class="form-select" name="mood">
                <option value="">Select your mood...</option>
                <option value="😊">😊 Happy</option>
                <option value="😢">😢 Sad</option>
                <option value="😡">😡 Angry</option>
                <option value="😴">😴 Tired</option>
                <option value="😎">😎 Cool</option>
                <option value="🤯">🤯 Stressed</option>
                <option value="❤️">❤️ Love</option>
                <option value="👍">👍 Good</option>
                <option value="💪">💪 Strong</option>
            </select>
        </div>

        <input type="text" class="form-control mb-2" name="footnote" placeholder="Footnote: (type '#goal:' to turn your footnote into a goal!)" />
        <input type="hidden" name="userId" value="@Model.Id" />
        <button type="submit" class="btn btn-success mt-2">Add Entry</button>
    </form>

    <hr />

    <div class="journal-entries mt-3">
        @foreach (var entry in Model.JournalEntries.OrderByDescending(e => e.CreatedAt))
        {
            <div class="card mb-2">
                <div class="card-body">
                    <small class="text-muted">@entry.CreatedAt.ToString("dd MMM yyyy")</small>

                    <p>
                        @entry.Content
                        @if (!string.IsNullOrWhiteSpace(entry.Mood))
                        {
                            <span class="ms-2">@entry.Mood</span> 
                        }
                    </p>

                    @if (!string.IsNullOrWhiteSpace(entry.Footnote))
                    {
                        if (entry.Footnote.StartsWith("#goal:"))
                        {
                            var goalTitle = entry.Footnote.Substring(6);
                            <form asp-controller="Goals" asp-action="AddGoal" method="post" class="d-inline">
                                <input type="hidden" name="title" value="@goalTitle" />
                                <input type="hidden" name="description" value="" />
                                <button type="submit" class="btn btn-sm btn-outline-success">
                                    Add Goal: @goalTitle
                                </button>
                            </form>
                        }
                        else
                        {
                            <small class="text-secondary">Footnote: @entry.Footnote</small>
                        }
                    }
                </div>
            </div>
        }
    </div>
</div>
