@model UserData
@inject Shifu.Services.JournalManager JournalManager


@* created by Jonathan Ghattas  #991703952 *@


<div class="w-100 p-3 rounded bg-white shadow">
    <div class="journal-container w-100">
        <h4>Your Journal</h4>

        <!-- Journal Form -->
        <form id="journalForm" method="post" asp-controller="Journal" asp-action="AddEntry">
            <textarea class="form-control mb-2" name="content" placeholder="Write your thoughts here..." rows="4"></textarea>

            <select class="form-select mb-2" name="mood">
                <option value="">How are you feeling?</option>
                <option value="😊">😊 Happy</option>
                <option value="😢">😢 Sad</option>
                <option value="😡">😡 Angry</option>
                <option value="😴">😴 Tired</option>
                <option value="😎">😎 Cool</option>
                <option value="🤯">🤯 Stressed</option>
                <option value="❤️">❤️ Love</option>
                <option value="👍">👍 Good</option>
                <option value="💪">💪 Strong</option>
            </select>

            <input type="hidden" name="userId" value="@Model.Id" />
            <button type="submit" class="btn btn-success mt-2">Add Entry</button>
        </form>

        <hr />

      
        <div class="journal-entries mt-3">
            @foreach (var entry in Model.JournalEntries.OrderByDescending(e => e.CreatedAt))
            {
                <div class="card mb-2">
                    <div class="card-body">
                        <small class="text-muted">@entry.CreatedAt.ToString("dd MMM yyyy")</small>
                        <p>
                            @entry.Content
                            @if (!string.IsNullOrWhiteSpace(entry.Mood))
                            {
                                <span class="ms-2">@entry.Mood</span>
                            }
                        </p>
                    </div>
                </div>
            }
        </div>
    </div>
</div>