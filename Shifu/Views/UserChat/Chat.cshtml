<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

<input id="currentUserId" type="hidden" value="@User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value" />

<div class="container-fluid mt-4">

    <!-- Back button -->
    <a asp-controller="Home" asp-action="Dashboard" class="btn btn-outline-secondary mb-3">
        ‚Üê Back
    </a>

    <div class="row">

        <!-- LEFT COLUMN -->
        <div class="col-4">

            <!-- Quote card -->
            <div class="card shadow-sm mb-3" style="position: sticky; top: 20px;">
                <div class="card-body bg-light border">
                    <p class="mb-0" id="quoteText">Loading quote...</p>
                </div>
            </div>

            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="mb-3">Pick a Mentor</h5>

                    <ul class="list-group" style="max-height: 70vh; overflow-y: auto;">
                        @foreach (var m in Model)
                        {
                            <li class="list-group-item">

                                <h5>@m.FirstName @m.LastName</h5>

                                <p class="mb-1"><strong>Qualifications:</strong> @m.Qualifications</p>
                                <p class="mb-1"><strong>Specialties:</strong> @m.Specialities</p>
                                <p>@m.Bio</p>

                                <div class="d-flex gap-2 mt-2">
                                    <button class="btn btn-sm btn-primary assignBtn" data-id="@m.Id">
                                        Select Mentor
                                    </button>

                                    <a class="btn btn-sm btn-outline-secondary"
                                       asp-controller="UserChat"
                                       asp-action="Chat">
                                        Open Chat
                                    </a>
                                </div>

                            </li>
                        }
                    </ul>
                </div>
            </div>

        </div>

        <!-- RIGHT COLUMN -->
        <div class="col-8">

            <div class="card shadow-sm">
                <div class="card-body">
                    <h4 class="mb-3">Chat</h4>

                    <!-- Chat messages -->
                    <div id="messages" class="border p-3 mb-2 rounded"
                         style="height:350px; overflow-y:auto; background:#fafafa;"></div>

                    <textarea id="messageInput" class="form-control mb-2" placeholder="Type a message..."></textarea>
                    <button id="sendBtn" class="btn btn-success w-100">Send</button>

                </div>
            </div>

        </div>

    </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.5/signalr.min.js"></script>

<script>
const currentUserId = document.getElementById("currentUserId").value;
let selectedMentorId = 0;

// Fetch assigned mentor
fetch(`/UserChat/GetAssignedMentor?userId=${currentUserId}`)
    .then(res => res.json())
    .then(data => {
        if (data.mentorId) {
            selectedMentorId = data.mentorId;
            // Hide others if already assigned
            document.querySelectorAll(".list-group-item").forEach(li => {
                if (!li.querySelector(`.assignBtn[data-id='${selectedMentorId}']`)) li.style.display = "none";
            });
            loadMessages();
        }
    });

// Load chat history
function loadMessages() {
    fetch(`/UserChat/LoadMessages?userId=${currentUserId}&mentorId=${selectedMentorId}`)
        .then(res => res.json())
        .then(data => {
            const msgs = document.getElementById("messages");
            msgs.innerHTML = "";
            data.forEach(m =>
                msgs.innerHTML += `<div><b>${m.sentByMentor ? "Mentor" : "You"}:</b> ${m.content}</div>`
            );
            msgs.scrollTop = msgs.scrollHeight;
        });
}

// Assign mentor
document.querySelectorAll(".assignBtn").forEach(b => b.addEventListener("click", async () => {
    selectedMentorId = b.dataset.id;

    // Hide all other mentors except this one
    document.querySelectorAll(".list-group-item").forEach(li => {
        if (li.contains(b)) {
            li.style.display = "block"; // keep selected
        } else {
            li.style.display = "none";  // hide others
        }
    });

    const res = await fetch('/UserChat/AssignMentor?mentorId=' + selectedMentorId, { method: 'POST' });
    if (res.ok) alert('Mentor assigned. Chat loaded.');
    loadMessages();
}));

// Sending message
document.getElementById("sendBtn").addEventListener("click", async () => {
    const content = document.getElementById("messageInput").value;
    if (!content.trim()) return;
    if (!selectedMentorId) {
        alert("Pick a mentor first.");
        return;
    }

    await fetch(`/UserChat/SendMessages?mentorId=${selectedMentorId}&message=${encodeURIComponent(content)}`, {
        method: 'POST'
    });

    const msgs = document.getElementById("messages");
    msgs.innerHTML += `<div><b>You:</b> ${content}</div>`;
    document.getElementById("messageInput").value = "";
});

// Quotes
window.addEventListener('DOMContentLoaded', () => {

    const quoteText = document.getElementById("quoteText");

    async function loadQuote() {
        try {
            const res = await fetch("/api/quotes/getquote");
            if (!res.ok) throw new Error("API failed");
            const data = await res.json();
            quoteText.innerText = data.text;
        } catch (err) {
            quoteText.innerText = "Could not load quote.";
        }
    }

    loadQuote();
    setInterval(loadQuote, 30000);
});
</script>
